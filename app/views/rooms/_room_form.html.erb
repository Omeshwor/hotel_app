<%= form_for @room do |f| %>
  <div class="form group row">
    <div class="col-form-label col-3">
      <%= f.label :"Room Name" %>
    </div>
    <div class="col-4">
      <%= f.text_field :title, class: "form-control", placeholder: "Room name", autofocus: true %>
    </div>
  </div>
  <div class="form group row">
    <div class="col-form-label col-3">
      <%= f.label :description %>
    </div>
    <div class="col-4">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-form-label col-3">
      <%= f.label :pictures %>
    </div>
    <div class="col-4">
      <%= f.file_field :images, multiple: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-4">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>